{
  "name": "environments",
  "version": "1.0.0",
  "description": "My environment setup scripts",
  "scripts": {
    "build:arch": "docker build -t environment-arch -f Dockerfile-arch .",
    "build:ubuntu": "docker build -t environment-ubuntu -f Dockerfile-ubuntu .",
    "build-fresh:arch": "npm run build:arch -- --no-cache",
    "build-fresh:ubuntu": "npm run build:ubuntu -- --no-cache",
    "build-fresh": "npm run build-fresh:arch && npm run build-fresh:ubuntu",
    "start:arch": "npm run build:arch && docker run -it --rm --name environment-arch --hostname arch-test environment-arch",
    "start:ubuntu": "npm run build:ubuntu && docker run -it --rm --name environment-ubuntu --hostname ubuntu-test environment-ubuntu",
    "shellcheck": "shellcheck provision.sh config/*.sh helpers/*.sh software/**/*.sh",
    "vet": "npm run shellcheck",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markgaze/environments.git"
  },
  "author": "markgaze",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/markgaze/environments/issues"
  },
  "homepage": "https://github.com/markgaze/environments#readme",
  "devDependencies": {
    "husky": "^8.0.1",
    "shellcheck": "^1.1.0"
  }
}
